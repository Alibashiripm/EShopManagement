@using EShopManagement.Application.DTOs.Order
@model List<OrderDto>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Eshop Management</a></li>
            <li class="breadcrumb-item" aria-current="page"> Orders </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> Your Orders </h1></header>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Num</th>
                                    <th>Date</th>
                                    <th>Sum</th>
                                    <th>Pay</th>
                                    <th>Command</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.OrderId
                                        </td>
                                        <td>
                                            @item.CreateDate
                                        </td>
                                        <td>@item.OrderSum</td>
                                        <td>
                                            @if (item.IsFinaly)
                                            {
                                                <p class="text-success">
                                                    @*<i class="glyphicon glyphicon-ok"></i>*@
                                                    Paid
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">
                                                    @*<i class="glyphicon glyphicon-remove"></i>*@
                                                    UnPaid
                                                </p>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-info" href="/UserPanel/Order/ShowOrder/@item.OrderId">Show details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>